<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@styles/battleshipsScene.css"
            xmlns="http://javafx.com/javafx/8.0.40" fx:controller="com.kduda.battleships.controllers.BattleshipsController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="true" text="_Game">
                <MenuItem mnemonicParsing="true" onAction="#newGameClicked" text="_New Game"/>
                <MenuItem mnemonicParsing="true" onAction="#exitClicked" text="_Exit"/>
            </Menu>
            <Menu mnemonicParsing="true" text="_Settings">
                <CheckMenuItem fx:id="soundsCheckItem" mnemonicParsing="true" onAction="#soundOptionAction"
                               text="Enable _Sound"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <HBox alignment="CENTER">
            <VBox fx:id="enemyBoardArea" maxHeight="200.0" styleClass="battlefield">
                <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308"
                       text="ENEMY'S BATTLEFIELD" styleClass="header">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
            <Separator orientation="VERTICAL">
                <HBox.margin>
                    <Insets left="15.0" right="15.0"/>
                </HBox.margin>
            </Separator>
            <VBox fx:id="playerBoardArea" maxHeight="200.0" styleClass="battlefield">
                <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308"
                       text="YOUR BATTLEFIELD" textAlignment="CENTER" styleClass="header">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="10.0" BorderPane.alignment="CENTER" styleClass="footer">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0"/>
            </BorderPane.margin>
            <VBox alignment="CENTER">
                <HBox>
                    <children>
                        <Label text="Enemy's units left: "/>
                        <Label fx:id="enemyShipsLabel" text="Label"/>
                    </children>
                </HBox>
            </VBox>
            <Separator orientation="VERTICAL"/>
            <VBox alignment="CENTER">
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Your units left: "/>
                        <Label fx:id="playerShipsLabel" text="Label"/>
                    </children>
                </HBox>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER" spacing="5.0">
                <Button fx:id="rotateUnitButton" mnemonicParsing="true" onAction="#rotateUnitClicked"
                        text="_Rotate unit (RMB)"/>
                <Button fx:id="randomPlacementButton" mnemonicParsing="true" onAction="#randomPlacementClicked"
                        text="Random _placement"/>
            </HBox>
        </HBox>
    </bottom>

</BorderPane>
