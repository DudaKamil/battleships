<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="795.0" prefWidth="950.0" stylesheets="@styles/battleshipsScene.css"
            xmlns="http://javafx.com/javafx/8.0.40" fx:controller="com.kduda.battleships.controllers.BattleshipsController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="true" text="_Game">
                <MenuItem mnemonicParsing="true" text="_New Game" onAction="#newGameClicked"/>
                <MenuItem mnemonicParsing="true" onAction="#exitClicked" text="_Exit"/>
            </Menu>
            <Menu mnemonicParsing="true" text="_Settings">
                <CheckMenuItem mnemonicParsing="true" text="Enable _Sound" fx:id="soundsCheckItem" onAction="#soundOptionAction"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <HBox alignment="CENTER">
            <VBox fx:id="enemyBoardArea" styleClass="battlefield">
                <Label alignment="CENTER" contentDisplay="CENTER"
                       text="                                 Enemy Battlefield">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0">
                <HBox.margin>
                    <Insets left="15.0" right="15.0"/>
                </HBox.margin>
            </Separator>
            <VBox fx:id="playerBoardArea" styleClass="battlefield">
                <Label alignment="CENTER" contentDisplay="CENTER"
                       text="                                  Your Battlefield" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="13.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
            <VBox alignment="CENTER">
                <HBox>
                    <children>
                        <Label text="Enemy units left: "/>
                        <Label fx:id="enemyShipsLabel" text="Label"/>
                    </children>
                </HBox>
            </VBox>
            <Separator orientation="VERTICAL"/>
            <VBox alignment="CENTER">
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Your units left:"/>
                        <Label fx:id="playerShipsLabel" text="Label"/>
                    </children>
                </HBox>
            </VBox>
            <Separator orientation="VERTICAL"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER" spacing="5.0">
                <Button mnemonicParsing="false" onAction="#rotateUnitClicked" text="Rotate unit (RMB)" fx:id="rotateUnitButton"/>
                <Button mnemonicParsing="false" onAction="#randomPlacementClicked" text="Random placement" fx:id="randomPlacementButton"/>
            </HBox>
        </HBox>
    </bottom>

</BorderPane>
